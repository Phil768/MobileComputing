<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:elevation="10sp"
    android:fadingEdge="horizontal|vertical"
    android:layoutMode="clipBounds"
    android:minHeight="70dp">

    <ImageView
        android:id="@+id/mtrl_list_item_icon"
        android:layout_width="59dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:src="@drawable/ic_baseline_emoji_food_beverage_24" />

    <TextView
        android:id="@+id/item_primary_text"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:fontFamily="casual"
        android:maxLines="1"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/item_primary_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="230dp"
        android:layout_marginBottom="-6dp"
        android:background="@color/title_color"
        android:fadingEdge="horizontal" />
</RelativeLayout>